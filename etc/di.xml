<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Logger configuration. -->
    <type name="Credorax\Credorax\Model\Logger\Handler\ResponseHandler">
        <arguments>
            <argument name="filesystem"
                      xsi:type="object">Magento\Framework\Filesystem\Driver\File
            </argument>
        </arguments>
    </type>
    <type name="Credorax\Credorax\Model\Logger\Handler\RequestHandler">
        <arguments>
            <argument name="filesystem"
                      xsi:type="object">Magento\Framework\Filesystem\Driver\File
            </argument>
        </arguments>
    </type>
    <type name="Credorax\Credorax\Model\Logger\Handler\ErrorHandler">
        <arguments>
            <argument name="filesystem"
                      xsi:type="object">Magento\Framework\Filesystem\Driver\File
            </argument>
        </arguments>
    </type>
    <type name="Credorax\Credorax\Model\Logger\ResponseLogger">
        <arguments>
            <argument name="name"
                      xsi:type="string">ResponseLogger
            </argument>
            <argument name="handlers"
                      xsi:type="array">
                <item name="response"
                      xsi:type="object">Credorax\Credorax\Model\Logger\ResponseHandler
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Credorax\Credorax\Model\Logger\RequestLogger">
        <arguments>
            <argument name="name"
                      xsi:type="string">RequestLogger
            </argument>
            <argument name="handlers"
                      xsi:type="array">
                <item name="response"
                      xsi:type="object">Credorax\Credorax\Model\Logger\RequestHandler
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Credorax\Credorax\Model\Logger\ErrorLogger">
        <arguments>
            <argument name="name"
                      xsi:type="string">ErrorLogger
            </argument>
            <argument name="handlers"
                      xsi:type="array">
                <item name="response"
                      xsi:type="object">Credorax\Credorax\Model\Logger\ErrorHandler
                </item>
            </argument>
        </arguments>
    </type>

